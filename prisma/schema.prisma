datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {

  id Int @id @default(autoincrement())
  name String
  email String
  password String
  image String @default("profile.jpg")




  Wallet Wallet[]
}


model Wallet {
  id     Int    @id @default(autoincrement())
  idUser Int
  name   String
  solde  Int    @default(0)
  devise String @default("Ar")

  expenses Expense[]
  incomes Income[]

  user User @relation(references: [id], fields: [idUser], onDelete: Cascade)
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  value       Int
  date        DateTime @default(now())
  idWallet    Int
  wallet      Wallet   @relation(references: [id], fields: [idWallet], onDelete: Cascade)
}

model Income {
  id          Int      @id @default(autoincrement())
  description String
  value       Int
  date        DateTime @default(now())
  idWallet    Int
  wallet      Wallet   @relation(references: [id], fields: [idWallet], onDelete: Cascade)
}
