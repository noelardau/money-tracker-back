datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Wallet {
  id     Int    @id @default(autoincrement())
  idUser String
  name   String
  solde  Int    @default(0)

  expenses Expense[]
  incomes Income[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  description String
  value       Int
  date        DateTime @default(now())
  idWallet    Int
  wallet      Wallet   @relation(references: [id], fields: [idWallet])
}

model Income {
  id          Int      @id @default(autoincrement())
  description String
  value       Int
  date        DateTime @default(now())
  idWallet    Int
  wallet      Wallet   @relation(references: [id], fields: [idWallet])
}
